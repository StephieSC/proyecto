<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stephie.proyectomultimedios.MainActivity">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Almuerzos"
    android:layout_centerHorizontal="true"
    android:textSize="24dp"
    android:id="@+id/almuerzos"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: "
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:id="@+id/al-total"
        android:layout_below="@+id/almuerzos"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Utilizados: "
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:id="@+id/al-utilizados"
        android:layout_below="@+id/al-total"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disponibles: "
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:id="@+id/al-disponibles"
        android:layout_below="@+id/al-utilizados"
        android:layout_alignParentLeft="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalles"
        android:textSize="18dp"
        android:id="@+id/boton1"
        android:layout_below="@+id/al-disponibles"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cena"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:id="@+id/cena"
        android:layout_below="@+id/boton1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: "
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:id="@+id/ce-total"
        android:layout_below="@+id/cena"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Utilizados: "
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:id="@+id/ce-utilizados"
        android:layout_below="@+id/ce-total"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disponibles: "
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:id="@+id/ce-disponibles"
        android:layout_below="@+id/ce-utilizados"
        android:layout_alignParentLeft="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalles"
        android:textSize="18dp"
        android:id="@+id/boton2"
        android:layout_below="@+id/ce-disponibles"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
